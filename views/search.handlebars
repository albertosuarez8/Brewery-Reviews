        <div class="column">
            <button id="search-button" class="button is-large is-responsive has-background-warning-dark">Search
            </button>
        </div>
    </div>

    <br>
    <div class="container">
        <article class="message">
            <div class="message-header is-centered is-right has-background-warning-light">
                <p class="has-text-warning-dark">Brewery Name</p>
            </div>

            <div class="container card">
                <div id="posts-container">
                    {{#each posts as |post|}}
                    <div>
                        <p>State: {{post.rating}}</p>
                        <p>Section: {{post.section}}</p>
                    </div>
                    {{/each}}
                </div>

            </div>
        </article>
    </div>
</div>

