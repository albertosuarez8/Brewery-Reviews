
   <main>
        <section>
            <div class="container">
                <article class="message">
                    <div class="message-header has-background-warning-light">
                        <p class="has-text-warning-dark">üç∫ Recently Featured üç∫</p>
                    </div>

                    <div class="card">
                        <div class="card-image">
                            <figure class="image is-2by1">
                                <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                            </figure>
                        </div>
                        <div class="card-content">
                            <div class="media">
                                <div class="media-left">
                                    <figure class="image is-28x28">
                                        <img class="is-rounded" src="https://bulma.io/images/placeholders/96x96.png"
                                            alt="Placeholder image">
                                    </figure>
                                </div>
                                <div class="media-content">
                                    <p class="title is-4 has-text-warning-dark">{{user.name}}</p>
                                    <p class="subtitle is-6">{{user}}</p>
                                </div>
                            </div>

                            <div class="content has-text-success-dark">
                                {{post.raitng}}
                                {{post.description}}
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit.
                                Phasellus nec iaculis mauris. 
                                <br>
                                <time class="has-text-grey" datetime="2016-1-1">{{post.date}}</time>
                            </div>
                        </div>
                    </div>
            </div>
        </section>
    </main>


