<main>
    <section>
        <div class="container">
            <article class="message">
                <div class="message-header has-background-warning-light">
                    <p class="has-text-warning-dark">üç∫ Recently Featured üç∫</p>
                </div>
           {{#each posts as |post| }}
                <div class="card">
                    <div class="card-image">
                    </div>
                    <div class="card-content">
                        <div class="media">
                            <div class="media-left">
                                <figure class="image is-28x28">
                                    <img class="is-rounded" src="{{post.image}}"
                                        >
                                </figure>
                            </div>
                            <div class="media-content">
                                <p class="title is-4 has-text-warning-dark">{{post.user.name}}</p>
                            </div>
                        </div>
                        <div class="content has-text-success-dark">
                            Rating: {{post.rating}}
                            Description: {{post.description}}
                            <br>
                            <time class="has-text-grey" datetime="2016-1-1">{{format_time post.date}}</time>
                        </div>
                    </div>
                </div>
        </div>
        {{/each}}
    </section>
</main>